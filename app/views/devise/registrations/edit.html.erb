<div class="container devise">
  <div class="devise-box">
    <p class="devise-title">アカウント編集</p>
    <div class="devise-inner">

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.label "アイコン画像" %>
          <%= image_tag current_user.image.present? ? current_user.image.url : "default.jpg", class: "user-icon" %>
          <%= f.file_field :image, :class => "image-field" %>
        </div>

        <div class="field">
          <%= f.label "名前" %>
          <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "devise-form" %>
        </div>

        <div class="field">
          <%= f.label "メールアドレス" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "devise-form" %>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>

        <div class="field">
          <%= f.label "変更後パスワード（変更する場合のみ入力）" %>
          <%= f.password_field :password, autocomplete: "new-password", class: "devise-form" %>
        </div>

        <div class="field">
          <%= f.label "パスワード確認用（変更する場合のみ入力）" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "devise-form" %>
        </div>

        <div class="field">
          <%= f.label "現在のパスワード" %>
          <%= f.password_field :current_password, autocomplete: "current-password", class: "devise-form" %>
        </div>

        <div class="action-btn">
          <%= f.submit "更新", class: "devise-login-btn" %>
        </div>
      <% end %>

      <%= link_to "戻る", :back, class: "devise-back-btn" %>
    </div>
  </div>
</div>