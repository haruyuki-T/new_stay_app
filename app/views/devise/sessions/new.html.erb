<div class="container devise">
  <div class="devise-box">
    <p class="devise-title">ログイン</p>
    <div class="devise-inner">

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <div class="required">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", :placeholder => "メールアドレス", :class => "devise-form" %>
          </div>
        </div>

        <div class="field">
          <div class="required">
            <%= f.password_field :password, autocomplete: "current-password", :placeholder => "パスワード", :class => "devise-form" %>
          </div>
        </div>

        <div class="action-btn">
          <%= f.submit "ログイン", :class => "devise-login-btn" %>
        </div>
      <% end %>

      <a class="devise-link" href="/users/sign_up">新しいアカウントを作成</a>
    </div>
  </div>
</div>