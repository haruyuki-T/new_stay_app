<div class="container room-show">
  <div class="row">
    <div class="room-show-box-left">
      <%= image_tag @room.room_image.present? ? @room.room_image.url : "room01.jpg", class: "room-show-image" %>
      <div class="room-show-inner">
        <div class="room-show-inner-icon">
          <%= link_to image_tag(current_user.image.present? ? current_user.image.url : "default.jpg", class: "user-icon"), '/' %>
        </div>
        <div class="room-show-profile">
          <p class="room-show-profile-name"><%= @room.room_name %></p>
          <p class="room-show-profile-address"><%= @room.address %></p>
        </div>
      </div>
      <p class="room-show-inner-content"><%= @room.room_introduction %></p>
    </div>

    <div class="room-show-box-right">
    <%# バリデーション %>
    <%= render "shared/error", obj: @reservation %>
      <div class="room-show-nav">
        <p class="price-icon">¥<%= @room.price %> / 日</p>
        <div class="room-show-date-select">
          <%= form_with model: [@room, @reservation], data: { turbo_confirm: "予約を確定しますか？" } do |f| %>
            <%= f.label :start_date, "開始日" %>
            <%= f.date_field :start_date, class: "form-control" %>
            <%= f.label :end_date, "終了日" %>
            <%= f.date_field :end_date, class: "form-control" %>
            <%= f.label :people, "人数" %>
            <%= f.text_field :people, class: "form-control" %>
            <%= f.submit "予約する", class: "submit-btn reservation-btn" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
